{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
<div style="background-color:#FFFFFF;">
    <h1>Adresse</h1>

    <table class="table" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adresse.ville }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adresse.rue }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>
                <iframe src={{ adresse.lien }}
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            </tr>
            <tr>
                <th>Appartement</th>
                <td>{{ appartement.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_adresse_index') }}">back to list</a>

    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">edit</a>

    {{ include('adresse/_delete_form.html.twig') }}
    </div>
{% endblock %}
